<div class="auth-form">
  <h2>Sign Up</h2>
  <form action="/signup" method="POST" novalidate>
      <div class="form-group">
          <label for="username">Username: </label>
          <input type="text" id="username" name="username" required />
          <span class="frontend-error-message" id="usernameError"></span>
      </div>
      <div class="form-group">
          <label for="email">Email: </label>
          <input type="email" id="email" name="email" required />
          <span class="frontend-error-message" id="emailError"></span>
      </div>
      <div class="form-group">
          <label for="password">Password: </label>
          <input type="password" id="password" name="password" required />
          <span class="frontend-error-message" id="passwordError"></span>
      </div>
      <div class="form-group">
          <label for="password2">Confirm password: </label>
          <input type="password" id="password2" name="password2" required />
          <span class="frontend-error-message" id="password2Error"></span>
      </div>
      <button type="submit" class="btn">Sign Up</button>
      <p>Already have an account? <a href="/login">Login</a></p>
  </form>
</div>
<script src="scripts/signupValidation.js"></script>